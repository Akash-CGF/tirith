{
    "meta": {
        "version": "v1",
        "required_provider": "terraform_plan"
    },
    "evaluators": [
        {
            "id": "pol_check_1",
            "provider_args": {
                "operation_type": "attribute",
                "terraform_resource_type": "aws_s3_bucket",
                "terraform_resource_attribute": "versioning.enabled"
            },
            "condition": {
                "type": "Equals",
                "expected": true
            }
        },
        {
            "id": "pol_check_2",
            "provider_args": {
                "operation_type": "count",
                "terraform_resource_type": "aws_s3_bucket"
            },
            "condition": {
                "type": "LessThan",
                "expected": 10
            }
        },
        {
            "id": "pol_check_3",
            "provider_args": {
                "operation_type": "action",
                "terraform_resource_type": "aws_s3_bucket"
            },
            "condition": {
                "type": "Contains",
                "expected": [
                    "create",
                    "update"
                ]
            }
        }
    ],
    "eval_expression": "( !(pol_check_1 && pol_check_2) && pol_check_3 ) || pol_check_3 "
}